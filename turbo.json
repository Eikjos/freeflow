{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ],
      "cache": true
    },
    "start:prod": {
      "dependsOn": ["^start:prod"],
       "outputs": [],
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "dependsOn": ["@repo/shared-types#build", "@repo/pdf-templates#build", "@repo/email-templates#build"],
      "cache": false,
      "persistent": false
    }
  }
}
