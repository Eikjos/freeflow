model Invoice {
  id           Int        @id @default(autoincrement())
  number       String
  name         String
  date         DateTime
  customerId   Int
  enterpriseId Int
  createdAt    DateTime
  updatedAt    DateTime
  mediaId      Int?       @unique
  type         InvoiceType
  status       StatusInvoice
  customer     Customer   @relation(fields: [customerId], references: [id])
  enterprise   Enterprise @relation(fields: [enterpriseId], references: [id])
  media        Media?     @relation(fields: [mediaId], references: [id])
}

enum StatusInvoice {
  WAITING_VALIDATION
  VALIDATE
  WAITING_PAYED
  PAYED
}

enum InvoiceType {
  QUOTE
  INVOICE
}