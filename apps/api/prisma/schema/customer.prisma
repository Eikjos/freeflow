model Customer {
  id          Int                  @id @default(autoincrement())
  name        String
  siret       String?
  tvaNumber   String?
  address     String
  city        String
  countryId   Int
  zipCode     String
  email       String
  phone       String
  createdAt   DateTime             @default(now())
  country     Country              @relation(fields: [countryId], references: [id])
  enterprises EnterpriseCustomer[]
  invoices    Invoice[]
  opinions    Opinion[]
  projects    Project[]
  users       User[]
}
