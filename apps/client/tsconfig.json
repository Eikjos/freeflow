{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": "src/app",
    "paths": {
      "@components/*": ["./components/*"],
      "@lib/*": ["./lib/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/pdf-templates/pdf/invoice-template.tsx"
  ],
  "exclude": ["node_modules"]
}
